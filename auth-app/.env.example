# ============================================
# Better Auth Configuration
# ============================================

# Better Auth Secret (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=

# Production URL (e.g., https://your-app.vercel.app)
BETTER_AUTH_URL=

# ============================================
# Database Configuration
# ============================================

# Neon Serverless Postgres
NEON_DATABASE_URL=

# ============================================
# OAuth Providers (Optional)
# ============================================

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================
# OpenAI Configuration (for Chatbot & Translation)
# ============================================

OPENAI_API_KEY=

# ============================================
# Qdrant Cloud Configuration
# ============================================

QDRANT_URL=
QDRANT_API_KEY=

# ============================================
# Application Configuration
# ============================================

# Same as BETTER_AUTH_URL in production
NEXT_PUBLIC_APP_URL=
NODE_ENV=production

# ============================================
# Chatbot API Configuration
# ============================================
# URL for the Python backend (FastAPI)
# If you don't have a separate backend, leave this empty or point to your deployed backend
NEXT_PUBLIC_CHATBOT_API_URL=
